    <!-- Page 3: My Only Friend -->
    <div id="page3" class="page hidden bg-pink-100 text-gray-800 p-8 md:p-12 lg:p-16 rounded-xl shadow-lg text-center max-w-lg mx-auto flex flex-col items-center transition-all duration-500 ease-in-out">
        <!-- The new image from the URL is placed here -->
        <img src="https://w0.peakpx.com/wallpaper/219/45/HD-wallpaper-friends-boys-girls-white-anime.jpg" 
             alt="Two friends holding hands" 
             class="w-full max-w-xs rounded-xl mb-6 border-4 border-white shadow-md"
             onerror="this.onerror=null;this.src='https://placehold.co/400x400/FFD1DC/6B46C1?text=Best+Friends'">
        
        <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold mb-4">My Only Friend is <span id="userName2" class="text-purple-600"></span></h1>
        <p class="text-base md:text-lg mb-4">I only have you as my friend!</p>
        <p class="text-sm text-gray-600">I don't need a list of friends because you're the only one that matters to me. Thanks for being you!</p>
    </div>

    <script>
        // Get references to all the pages and elements
        const page1 = document.getElementById('page1');
        const page2 = document.getElementById('page2');
        const page3 = document.getElementById('page3');
        const nameInput = document.getElementById('nameInput');
        const nextBtn = document.getElementById('nextBtn');
        const userNameSpan = document.getElementById('userName');
        const userNameSpan2 = document.getElementById('userName2');
        const friendListLink = document.getElementById('friendListLink');

        // Function to navigate to page 2
        function goToPage2() {
            const name = nameInput.value || "Friend"; // Use "Friend" if the input is empty
            userNameSpan.textContent = name;
            page1.classList.add('hidden');
            page2.classList.remove('hidden');
        }

        // Function to navigate to page 3
        function goToPage3() {
            const name = nameInput.value || "Friend";
            userNameSpan2.textContent = name;
            page2.classList.add('hidden');
            page3.classList.remove('hidden');
        }

        // Add event listeners
        nextBtn.addEventListener('click', goToPage2);
        friendListLink.addEventListener('click', goToPage3);
        
        // Allow pressing Enter in the input field to proceed
        nameInput.addEventListener('keydown', (event) => {
            if (event.key === 'Enter') {
                goToPage2();
            }
        });
    </script>
