        <!-- Confetti animation layer -->
        <div class="absolute inset-0 overflow-hidden -z-10">
            <div class="confetti-item heart" style="left: 10%; animation-delay: 0s;"></div>
            <div class="confetti-item heart bg-white" style="left: 30%; animation-delay: 2s;"></div>
            <div class="confetti-item heart" style="left: 50%; animation-delay: 4s;"></div>
            <div class="confetti-item heart bg-white" style="left: 70%; animation-delay: 6s;"></div>
            <div class="confetti-item heart" style="left: 90%; animation-delay: 8s;"></div>
        </div>
        <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold mb-4">Welcome to Friendship Day</h1>
