    <style>
        body {
            font-family: 'Poppins', sans-serif;
        }
        /* Custom Keyframe Animations */
        @keyframes twinkle {
            0%, 100% { opacity: 1; }
            50% { opacity: 0.5; }
        }
        @keyframes pulse-light {
            0%, 100% { box-shadow: 0 0 5px #fff, 0 0 10px #fff, 0 0 15px #fff, 0 0 20px #a4c6e1; }
            50% { box-shadow: 0 0 10px #fff, 0 0 20px #fff, 0 0 30px #fff, 0 0 40px #a4c6e1; }
        }
        @keyframes confetti-fall {
            0% { transform: translateY(-100vh) rotate(0deg); opacity: 0; }
            10% { opacity: 1; }
            100% { transform: translateY(100vh) rotate(360deg); opacity: 0; }
        }
        .confetti-item {
            position: absolute;
            width: 15px;
            height: 15px;
            background-color: transparent;
            border-radius: 50%;
            opacity: 0;
            animation: confetti-fall 10s linear infinite;
        }
        .heart {
            background-color: #a4c6e1; /* Pastel blue */
            transform: rotate(-45deg);
        }
        .heart::before, .heart::after {
            content: '';
